<div class="border-b border-gray-200 py-4" id="<%= dom_id(comment) %>">
  <div class="flex items-start space-x-3">
    <%= image_tag avatar_url_for(comment.user), class: "w-8 h-8 rounded-full" %>
    <div class="flex-1">
      <div class="flex items-center justify-between">
        <div>
          <span class="font-medium"><%= comment.user.full_name %></span>
          <span class="text-gray-500 text-sm ml-2">
            <%= time_ago_in_words(comment.created_at) %> ago
          </span>
        </div>
        <% if comment.user == current_user %>
          <div class="flex items-center space-x-2">
            <%= button_to "Delete", task_comment_path(comment.task, comment), 
                method: :delete, 
                class: "text-red-600 hover:text-red-800 text-sm",
                data: { turbo_confirm: "Are you sure?" } %>
          </div>
        <% end %>
      </div>
      <div class="mt-1 text-gray-800">
        <%= comment.content %>
      </div>
    </div>
  </div>
</div> 