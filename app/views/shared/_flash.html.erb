<% flash.each do |type, message| %>
  <% flash_class = case type
    when 'notice' then 'bg-green-100 text-green-800'
    when 'alert', 'error' then 'bg-red-100 text-red-800'
    else 'bg-blue-100 text-blue-800'
    end 
  %>

  <div class="mb-4 rounded-lg p-4 <%= flash_class %>" 
       data-controller="flash"
       data-flash-target="message">
    <div class="flex justify-between items-center">
      <div class="flex-1"><%= message %></div>
      <button type="button" 
              class="ml-4 text-gray-600 hover:text-gray-800"
              data-action="flash#dismiss">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>
<% end %> 