<div class="bg-white rounded-lg shadow-sm p-4 mb-4" id="<%= dom_id(task) %>">
  <div class="flex justify-between items-start">
    <div>
      <h3 class="text-lg font-semibold">
        <%= link_to task.title, project_task_path(task.project, task), class: "text-blue-600 hover:text-blue-800" %>
      </h3>
      <p class="text-gray-600 text-sm mt-1">
        <%= link_to task.project.name, project_path(task.project), class: "text-gray-700 hover:text-gray-900" %>
      </p>
    </div>
    <div class="flex items-center space-x-2">
      <span class="px-2 py-1 text-sm rounded <%= task_status_color(task.status) %>">
        <%= task.status.titleize %>
      </span>
      <span class="px-2 py-1 text-sm rounded bg-gray-100 text-gray-800">
        P<%= task.priority %>
      </span>
    </div>
  </div>
  
  <div class="mt-4 flex justify-between items-center text-sm text-gray-500">
    <div class="flex items-center">
      <%= image_tag avatar_url_for(task.assignee), class: "w-6 h-6 rounded-full" %>
      <span class="ml-2"><%= task.assignee.full_name %></span>
    </div>
    <div>
      Due: <%= l task.due_date, format: :short if task.due_date %>
    </div>
  </div>
</div> 