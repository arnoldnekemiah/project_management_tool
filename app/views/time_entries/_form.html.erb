<%= form_with(model: [task, time_entry], class: "mt-4", data: { controller: "time-entry" }) do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="form-group">
      <%= f.label :start_time %>
      <%= f.datetime_local_field :start_time, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :end_time %>
      <%= f.datetime_local_field :end_time, class: "form-input" %>
    </div>
  </div>

  <div class="form-group mt-4">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 2, class: "form-input" %>
  </div>

  <div class="mt-4 flex justify-end space-x-2">
    <button type="button" class="btn btn-secondary" data-action="time-entry#hideForm">Cancel</button>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %> 